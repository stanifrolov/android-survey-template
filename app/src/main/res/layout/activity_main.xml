<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stanislavfrolov.quizapp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Take Survey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/take_survey" />

        <Button
            android:text="Manual Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/manual_input" />

        <Button
            android:text="Change Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/change_answer" />

        <Button
            android:text="Show Statistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_statistic" />

    </LinearLayout>
</RelativeLayout>
